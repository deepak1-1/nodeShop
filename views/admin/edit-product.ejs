<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(error){%>
                    <div class="user-message user-message--error">
                        <%=error%>
                    </div>
                    <%}%>
                        <form class="product-form"
                            action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
                            method="POST" enctype="multipart/form-data">
                            <div class="form-control">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title" value="<%=oldInput.title%>">
                            </div>
                            <div class="form-control">
                                <label for="imageUrl">Image URL</label>
                                <input type="file" name="image" id="image" />
                            </div>
                            <div class="form-control">
                                <label for="price">Price (INR)</label>
                                <input type="number" name="price" id="price" step="0.01" value="<%=oldInput.price%>">
                            </div>
                            <div class="form-control">
                                <label for="description">Description</label>
                                <textarea name="description" id="description"
                                    rows="5"><%=oldInput.description%></textarea>
                            </div>
                            <% if (editing) { %>
                                <input type="hidden" value="<%= oldInput._id %>" name="productId">
                                <% } %>
                                    <input hidden name="_csrf" value=<%=csrfToken%>>
                                    <button class="btn" type="submit">
                                        <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
                                    </button>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>